generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Session {
  id        String   @id @default(cuid())
  sid       String   @unique
  data      String
  expiresAt DateTime

  @@index([expiresAt])
}

model User {
 id Int @id @default(autoincrement())
 username String @unique
 password String 
 email    String @unique
 files File[]
}

model File {
  id Int @id @default(autoincrement())
  fileLocation String
  originalName String
  uploadedAt DateTime @default(now())
  author User @relation(fields: [authorId],references: [id])
  authorId Int
}